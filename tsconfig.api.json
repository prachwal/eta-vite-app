{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist-api",
    "rootDir": "./api",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "declaration": false,
    "strict": true,
    "types": ["node"]
  },
  "include": ["api/**/*.ts"]
}
